.widget.widget-balances
  h4(l10n) Balances

  ul.fa-ul
    li.currency-xrp
      i.fa-li
      h5 XRP
      div(ng-show="account.Balance")
        span(rp-address-popover, rp-address-popover-summ="account.Balance") {{ account.Balance | rpamount }}
      div(ng-hide="account.Balance") 0.00
    li(ng-repeat="entry in balances", ng-class="'currency-' + (entry.total | rpcurrency | lowercase)")
      i.fa-li.fa-money(ng-class="'fa-' + (entry.total | rpcurrency | lowercase)")
      h5 {{ entry.total | rpcurrency }}
      div
        span(rp-address-popover, rp-address-popover-summ="entry.total") {{ entry.total | rpamount }}
      dl(ng-repeat="(issuer, component) in entry.components")
        dt(ng-show="component.gateway.app") {{rp-currency}}.{{component.gateway.app.name}}
        dt(ng-hide="component.gateway.app", rp-pretty-identity="issuer", rp-pretty-issuer-contacts="userBlob.data.contacts", rp-address-popover="issuer")
        dd
          span(rp-address-popover, rp-address-popover-summ="component") {{ component | rpamount }}
