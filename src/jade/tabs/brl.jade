section.col-xs-12.content(ng-controller='BrlCtrl')

  //- Disconnected

  group.disconnected(ng-hide='connected')
    p.literal(l10n="err-you-must-be-online-to-see-this-screen", l10n)
      | You have to be online to see this screen

  //- Funding
  div(ng-show="'web' === client && !loadingAccount && !account.Balance && loadState.account && connected")
    include banner/unfunded

  .row(ng-show='connected')
    .col-sm-12
      //- N5. Notifications for connect new account
      group.mode-granted.wide(ng-show='mode=="granting" && account.Balance')
        group.pending(ng-show='tx_result!=="cleared"')
          h2.tx-status(l10n) Connecting Rippex gateway to your Ripple account...
        group.result-success(ng-show='tx_result=="cleared"')
          h2.tx-status(l10n) Gateway connected.
        group.result-error(ng-show='tx_result=="error"')
          h2.tx-status(l10n) Gateway could not be connected!
          p(l10n) There was a problem connecting the gateway. Please try again later.
        group.result-malformed(ng-show='tx_result=="malformed"')
          h2.tx-status(l10n) There was a problem connecting the gateway. Please try again later.
          p(l10n) Your request is invalid, reason: {{engine_result}} - {{engine_result_message}}
        group.result-failed(ng-show='tx_result=="failed"')
          h2.tx-status(l10n) Gateway connection failed!
          p(ng-switch on="engine_result")
            span(ng-switch-when="terNO_LINE", l10n) You have no gateway connected in this currency.
            span(ng-switch-when="tecINSUF_RESERVE_LINE", l10n) Insufficient reserve to connect gateway.
            span(ng-switch-when="tecNO_LINE_INSUF_RESERVE", l10n) You must have at
              | least {{account.reserve_to_add_trust | rpamount:0}} XRP to connect a gateway.&#32;
              a(href="http://ripple.com/help/#reserve", l10n) Read more.
            span(ng-switch-default, l10n) Gateway connection failed to clear,
              | reason: {{engine_result_message}}

    .col-sm-3
      include fund/menu
    .col-sm-9.list
      .fundBtc
        .nameLine(l10n) Brazilian Real Deposit
        .row.gateway
          .col-md-3
              .title(l10n) Gateway
              .description(l10n)
                p(l10n) Ripple (~rippex) 
                a(href="https://rippex.net ", target="_blank") www.rippex.net
          .col-md-3
              .title(l10n) Availability
              .description(l10n) Brazil
          .col-md-3
              .title(l10n) Fees
              .description(l10n) 
                p(l10n) Deposit: 1.50 BRL + 0.5% 
                p(l10n) Transfer: 0.3% 
                P(l10n)
                  a(href='https://rippex.net/precos-prazos.php', target="_blank") More details 
          .col-md-3
              .title(l10n) Rating
              .description(l10n)
                a(href="https://coinist.co/ripple/assets/brl-rippex", target="_blank") read reviews

        .row.fund-tab-description(ng-show="!brlConnected")
          .col-md-12
            .descriptor.tos(l10n) Ripple Trade has partnered with Rippex to provide easy access to BRL. By continuing, you agree with Rippex's 
              a(href="https://rippex.net/termos.php#/", target="_blank") terms of service.&#32;
              | Following this action will enable Rippex to hold BRL on your behalf.

        .row.fund-tab-description
          .col-xs-9.col-sm-5.col-md-4.action-btn-wrapper
            button.btn.btn-large(type="submit",ng-click="create_trust_line()", ng-hide="brlConnected", ng-disabled="loading || !account.Balance") 
              span(ng-show="!loading", l10n)  Add Rippex
              span(ng-show="loading", l10n)  Adding...
            button.btn.btn-large(ng-show="showInstructions && brlConnected", type="submit", ng-click="toggleInstructions()", l10n) Hide instructions
            button.btn.btn-large(ng-show="!showInstructions && brlConnected ", type="submit", ng-click="toggleInstructions()", l10n) Show instructions


          .connect.col-md-2.col-xs-3.col-sm-7
            .description.fa.fa-times(ng-show="!brlConnected", l10n) Not connected
            .description.fa.fa-check(ng-show="brlConnected", l10n) Connected
        .row.fund-tab-description(ng-show="showInstructions && brlConnected")
          .instructions.col-md-10
            a.dismiss(href="", id="hide", ng-click="toggleInstructions()", l10n)  Ã—
            .title(l10n) NEW CUSTOMERS- SIGN UP AT RIPPEX
            .description(l10n) Sign up at Rippex.net to initiate deposits and withdrawals. You will need:
              ul
                li(l10n) A&#32;
                  a(href="http://en.wikipedia.org/wiki/Cadastro_de_Pessoas_F%C3%ADsicas", target="_blank") CPF number.
                li(l10n) A bank account in Brazil.
                li(l10n) 
                  a(href="https://rippex.zendesk.com/hc/pt-br/articles/202324834-Crie-sua-conta-Rippex", target="_blank") Detailed instructions.


            .title(l10n) EXISTING RIPPEX CUSTOMERS
            .description(l10n) If you have a Rippex account, 
              a(href="https://rippex.net/#/login", target="_blank") login here. 

            .title(l10n) DEPOSIT INSTRUCTIONS
            .description(l10n) Rippex accepts deposits from all Brazilian banks. Instructions 
              a(href="https://rippex.zendesk.com/hc/pt-br/articles/202324844-Dep%C3%B3sitos-Transfer%C3%AAncia-Banc%C3%A1ria", target="_blank") here. 
